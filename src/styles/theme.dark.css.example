/* ============================================
   暗色主题配置（示例文件）
   如需分开配置，重命名为 theme.dark.css
   ============================================ */

:root {
  /* 主色调 */
  --theme-primary: #6366f1;
  --theme-secondary: #8b5cf6;
  --theme-accent: #ec4899;
  
  /* 背景色 */
  --theme-bg-main: #0a0e27;
  --theme-bg-secondary: #1a1f3a;
  --theme-bg-elevated: #252b47;
  --theme-bg-overlay: rgba(0, 0, 0, 0.3);
  
  /* 文字色 */
  --theme-text-primary: #e2e8f0;
  --theme-text-secondary: #94a3b8;
  --theme-text-muted: #64748b;
  --theme-text-inverse: #1a1a1a;
  
  /* 边框色 */
  --theme-border-light: rgba(255, 255, 255, 0.1);
  --theme-border-medium: rgba(255, 255, 255, 0.2);
  --theme-border-strong: rgba(255, 255, 255, 0.3);
  
  /* 链接色 */
  --theme-link-default: #60a5fa;
  --theme-link-hover: #93c5fd;
  --theme-link-active: #3b82f6;
  
  /* 代码块 */
  --theme-code-bg: #1e293b;
  --theme-code-text: #f472b6;
  --theme-code-border: rgba(255, 255, 255, 0.1);
  
  /* 阴影 */
  --theme-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --theme-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --theme-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
  
  /* 圆角 */
  --theme-radius-sm: 0.25rem;
  --theme-radius-md: 0.5rem;
  --theme-radius-lg: 1rem;
  
  /* 间距 */
  --theme-space-xs: 0.5rem;
  --theme-space-sm: 1rem;
  --theme-space-md: 1.5rem;
  --theme-space-lg: 2rem;
  --theme-space-xl: 3rem;
}

