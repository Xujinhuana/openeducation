/* ============================================
   亮色主题配置（示例文件）
   如需分开配置，重命名为 theme.light.css
   ============================================ */

html.light {
  /* 主色调 */
  --theme-primary: #4f46e5;
  --theme-secondary: #7c3aed;
  --theme-accent: #ec4899;
  
  /* 背景色 */
  --theme-bg-main: #ffffff;
  --theme-bg-secondary: #f8fafc;
  --theme-bg-elevated: #ffffff;
  --theme-bg-overlay: rgba(0, 0, 0, 0.1);
  
  /* 文字色 */
  --theme-text-primary: #0f172a;
  --theme-text-secondary: #475569;
  --theme-text-muted: #94a3b8;
  --theme-text-inverse: #ffffff;
  
  /* 边框色 */
  --theme-border-light: #e2e8f0;
  --theme-border-medium: #cbd5e1;
  --theme-border-strong: #94a3b8;
  
  /* 链接色 */
  --theme-link-default: #2563eb;
  --theme-link-hover: #1d4ed8;
  --theme-link-active: #1e40af;
  
  /* 代码块 */
  --theme-code-bg: #f1f5f9;
  --theme-code-text: #db2777;
  --theme-code-border: #e2e8f0;
  
  /* 阴影 */
  --theme-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --theme-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --theme-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

